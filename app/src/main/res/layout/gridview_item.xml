<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardView"
    android:layout_width="match_parent"
    android:layout_height="@dimen/cardview_default_size"
    android:layout_gravity="center"
    android:layout_margin="@dimen/default_margin"
    android:elevation="@dimen/cardview_elevation"
    card_view:cardCornerRadius="@dimen/cardview_radius">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/poseImage"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@id/poseName"/>

        <TextView
            android:id="@+id/poseName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="@android:color/white"
            android:padding="@dimen/default_padding"
            android:ems="@integer/textview_default_ems"
            android:inputType="none" />
    </RelativeLayout>

</androidx.cardview.widget.CardView>