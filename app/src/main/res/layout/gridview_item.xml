<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardView"
    android:layout_width="100dp"
    android:layout_height="100dp"
    android:layout_gravity="center"
    android:layout_margin="@dimen/default_margin"
    android:elevation="@dimen/cardview_elevation"
    android:onClick="onClickLoadUrl"
    card_view:cardCornerRadius="@dimen/cardview_radius"
    card_view:contentPadding="@dimen/cardview_default_contentpadding">

    <ImageView
        android:id="@+id/poseImage"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <TextView
        android:id="@+id/poseName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:ems="@integer/textview_default_ems"
        android:inputType="none" />

</androidx.cardview.widget.CardView>