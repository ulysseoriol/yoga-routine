<layout xmlns:android="http://schemas.android.com/apk/res/android">
    <data>
        <variable name="pose" type="com.example.ulysse.myoga.Model.Pose"/>

    </data>
    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        card_view:contentPadding="@dimen/cardview_default_contentpadding"
        android:elevation="@dimen/cardview_default_elevation"
        card_view:cardCornerRadius="@dimen/cardview_default_radius"
        android:layout_margin="@dimen/default_margin"
        >

        <TextView
            android:id="@+id/poseName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="@integer/textview_default_ems"
            android:inputType="none"
            android:text="@{pose.getEnglishName()}"/>
    </android.support.v7.widget.CardView>

</layout>